<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstProject.RegistrationPage" Title="Регистрация" Visual="Material">
    <ContentPage.Content>
        <StackLayout Padding="50,20">
            <StackLayout Spacing="50">
                <Entry x:Name="EmailTxt" Placeholder="Логин" TextColor="Black" BackgroundColor="LightGray" Keyboard="Email"/>
                <Entry x:Name="LoginTxt" Placeholder="Email" TextColor="Black" BackgroundColor="LightGray" Keyboard="Text"/>
                <Entry x:Name="PasswordTxt" Placeholder="Пароль" TextColor="Black" BackgroundColor="LightGray" IsPassword="True"/>
                <Entry x:Name="PasswordCompleteTxt" Placeholder="Пароль" TextColor="Black" BackgroundColor="LightGray" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Margin="0,120,0,0"
                    x:Name="BtnREG"
                    Font="14"
                    TextColor="black"
                    BorderColor="Black"
                    BackgroundColor="DeepSkyBlue"
                    CornerRadius="45"
                    BorderWidth="1"
                    Clicked="BtnREG_Clicked"
                    Text="Зарегистрироваться"
                    HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>